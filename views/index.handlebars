<div class="row">
  <div class="col-md-12">
    <h1 id="heading">Eat-Da-Burger!</h1>
  </div>
</div>


{{!-- Undevoured Burgers --}}
<div class="row">
  <div class="col-md-6">
    <ol id="waitingSide">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block eaten=false}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="col-md-6">
    {{!-- Devoured Burgers --}}
    <ol id="eatenSide">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block eaten=true}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>







{{!-- Submit Form --}}
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label> 
    <br>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Submit</button>

  <h4>Enter a burger you want to eat, click the submit button</h4>

</form>
