<div class="row" id="headingRow">
  <div class="col-md-4"></div>
  <div class="col-md-4" id="image-col">
      <img src="/assets/images/burger.png" width="50" height="50" alt="burger">
  </div>
  <div class="col-md-4"></div>
</div>

<div class="row" id="headingDiv">
  <div class="col-md-12">
      <h1 id="heading">Eat-Da-Burger!</h1>
  </div>
</div>
  


{{!-- Undevoured Burgers --}}
<div class="row">
  <div class="col-md-6">
    <ol id="waitingSide">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="col-md-6">
    {{!-- Devoured Burgers --}}
    <ol id="eatenSide">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>







{{!-- Submit Form --}}
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label> 
    <br>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit" class="btn btn-success">Submit</button>

  <h5>Enter a burger you want to put on list, click the "Submit" button</h5>

</form>
